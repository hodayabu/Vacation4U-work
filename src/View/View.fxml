<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.Controller">
   <children>
      <Pane prefHeight="600.0" prefWidth="800.0">
         <children>
            <ImageView fitHeight="990.0" fitWidth="864.0" layoutX="5.0" layoutY="-3.0" opacity="0.38" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="/beach_1.jpg" />
               </image></ImageView>
            <Label layoutX="135.0" layoutY="55.0" prefHeight="178.0" prefWidth="618.0" text="Welcome!" textFill="#648ac2">
               <font>
                  <Font name="System Bold" size="120.0" />
               </font>
            </Label>
            <Button fx:id="btn_create" layoutX="29.0" layoutY="278.0" mnemonicParsing="false" onAction="#create" prefHeight="57.0" prefWidth="329.0" text="Create user ">
               <font>
                  <Font size="44.0" />
               </font></Button>
            <Button fx:id="btn_delete" layoutX="456.0" layoutY="278.0" mnemonicParsing="false" onAction="#delete" prefHeight="47.0" prefWidth="329.0" text="Delete user ">
               <font>
                  <Font size="46.0" />
               </font>
            </Button>
            <Button fx:id="btn_search" layoutX="456.0" layoutY="440.0" mnemonicParsing="false" onAction="#read" prefHeight="96.0" prefWidth="329.0" text="Search user">
               <font>
                  <Font size="46.0" />
               </font>
            </Button>
            <Button fx:id="btn_update" layoutX="29.0" layoutY="442.0" mnemonicParsing="false" onAction="#update" prefHeight="96.0" prefWidth="329.0" text="Update user">
               <font>
                  <Font size="45.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
